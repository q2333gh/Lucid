FROM ubuntu:22.04

# Minimal base image; all tools installed by test script
ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /tmp

# Copy test workflow script into the image so it can be run directly
COPY test_workflow_inside_container.sh /usr/local/bin/test_workflow_inside_container.sh
RUN chmod +x /usr/local/bin/test_workflow_inside_container.sh

CMD ["/bin/bash"]
